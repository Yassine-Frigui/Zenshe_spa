# Production Environment Variables Template
# Copy this file to .env.prod and fill with real production values
# NEVER commit .env.prod to the repository

# Server
PORT=5000
NODE_ENV=production

# Auth - CRITICAL: Generate a strong random JWT secret
BYPASS_AUTH=0
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h

# Database - External managed database (RDS, Cloud SQL, etc.)
DB_HOST=your-production-db-host.example.com
DB_USER=zenshe_prod_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
DB_NAME=zenshespa_database
DB_PORT=3306

# Brevo  - Production API keys
BREVO_API_KEY=your_production_brevo_api_key
BREVO_SENDER_EMAIL=contact@zenshe.com.tn
BREVO_RESERVATION_API_KEY=your_production_brevo_reservation_key
BREVO_RESERVATION_SENDER_EMAIL=contact@zenshe.com.tn

# JotForm - Production API key
JOTFORM_API_KEY=your_production_jotform_api_key
JOTFORM_FORM_ID=your_form_id

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Uploads
UPLOAD_DIR=/usr/src/app/uploads
MAX_FILE_SIZE=5242880

# Frontend URL for CORS
FRONTEND_URL=https://your-production-domain.com
NGROK_DOMAIN=

# Docker compose specific (for docker-compose.prod.yml)
BACKEND_PORT=5000
FRONTEND_PORT=80
VITE_API_URL=

# Database root password (only needed if using docker-compose DB service)
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD
