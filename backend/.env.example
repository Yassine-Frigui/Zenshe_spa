# Backend .env example - DO NOT commit secrets into the repo
# Copy this file to backend/.env and fill the values for local development

# Server
PORT=5000
NODE_ENV=development

# Auth
BYPASS_AUTH=0
JWT_SECRET=replace_with_a_secure_random_value
JWT_EXPIRES_IN=24h

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=zenshespa_database
DB_PORT=3306

# Brevo (SendinBlue) - fill with your account keys
BREVO_API_KEY=
BREVO_SENDER_EMAIL=contact@example.com
BREVO_RESERVATION_API_KEY=
BREVO_RESERVATION_SENDER_EMAIL=contact@example.com

# Uploads
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# JotForm
JOTFORM_API_KEY=
JOTFORM_FORM_ID=

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# Configuration de l'environnement

# Base de données MySQL
DB_HOST=localhost
