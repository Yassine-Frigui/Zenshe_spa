# Production Environment Configuration for ZenShe Spa

# CRITICAL: Change all default values before production deployment!

# Application Environment
NODE_ENV=production
PORT=5000

# Database Configuration - Use environment-specific values
DB_HOST=localhost
DB_USER=zenshespa_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_NAME=zenshespa_production
DB_PORT=3306

# JWT Configuration - MUST be changed for production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_OF_AT_LEAST_64_CHARACTERS_1234567890
JWT_EXPIRES_IN=3600

# Frontend URL - Update with your production domain
FRONTEND_URL=https://yourdomain.com

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security Configuration
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_SECRET_456789
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
RESERVATION_RATE_LIMIT_MAX=10

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/zenshespa/app.log

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Database Connection Pool
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Monitoring
APM_SERVICE_NAME=zenshespa-backend
APM_SERVER_URL=https://your-apm-server.com

# Redis Configuration (for session storage in production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Error Reporting
SENTRY_DSN=https://your-sentry-dsn.com

# Feature Flags
MAINTENANCE_MODE=false
BOOKING_ENABLED=true
NOTIFICATIONS_ENABLED=true

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# IMPORTANT SECURITY NOTES:
# 1. Never commit this file with real values to version control
# 2. Use a secure method to deploy environment variables (Azure Key Vault, AWS Secrets Manager, etc.)
# 3. Regularly rotate JWT secrets and database passwords
# 4. Monitor access logs for suspicious activity
# 5. Keep all dependencies up to date
# 6. Use HTTPS in production
# 7. Implement proper backup and disaster recovery
# 8. Set up monitoring and alerting